---
config:
  look: neo
  theme: default
---
classDiagram
	namespace Components {
        class ProfilePage {
	        -activeTab: string
	        +changeTab(tab) : void
	        +render() : ReactElement
        }

        class ProfileHeader {
	        -user: User
	        -avatar: string
	        -name: string
	        -email: string
	        +render() : ReactElement
        }

        class ProfileForm {
	        -name: string
	        -email: string
	        -phone: string
	        -address: string
	        -isEditing: boolean
	        -isLoading: boolean
	        +handleEdit() : void
	        +handleSave(data) : Promise~void~
	        +handleCancel() : void
	        +validateForm() : boolean
	        +render() : ReactElement
        }

        class Tabs {
	        -defaultValue: string
	        -value: string
	        -children: ReactNode
	        +onValueChange(value) : void
	        +render() : ReactElement
        }

        class TabsList {
	        -children: ReactNode
	        +render() : ReactElement
        }

        class TabsTrigger {
	        -value: string
	        -children: ReactNode
	        +render() : ReactElement
        }

        class TabsContent {
	        -value: string
	        -children: ReactNode
	        +render() : ReactElement
        }

	}
	namespace Hooks {
        class useProfile {
	        -profile: UserProfile | null
	        -isLoading: boolean
	        -error: Error | null
	        +fetchProfile() : Promise~void~
	        +updateProfile(data) : Promise~void~
	        +changePassword(current, new) : Promise~void~
        }

	}
	namespace Services {
        class ProfileService {
	        +getProfile() : Promise~UserProfile~
	        +updateProfile(data) : Promise~UserProfile~
	        +changePassword(current, new) : Promise~MessageResponse~
        }

	}

    ProfilePage *-- ProfileHeader : contains
    ProfilePage *-- Tabs : contains
    Tabs *-- TabsList : contains
    Tabs *-- TabsContent : contains (multiple)
    TabsList *-- TabsTrigger : contains (multiple)
    TabsContent *-- ProfileForm : contains
    ProfileForm ..> useProfile : uses
    useProfile ..> ProfileService : depends on